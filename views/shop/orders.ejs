  <body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <% if(orders.length > 0) {%>
          <ul>
            <% orders.forEach(item => { %>
              <li>
                <h1># <%= item.id %></h1>
                <ul>
                  <% item.products.forEach(product => { %>
                    <li><%=product.title %> (<%= product.orderItem.quantity%>)</li>
                  <% }); %> 
                </ul>
              </li>
            <% }); %> 
          </ul>
        <% } else { %>
          <h1>Nothing there!</h1>
        <% } %>
    </main>
    <%- include('../includes/end.ejs') %>